<?xml version="1.0"?>
<launch>
    <arg name="id_subsystem1" default="133"/>
    <arg name="id_subsystem2" default="134"/>
    <arg name="robot_ns1" value="robot_0"/>
    <arg name="robot_ns2" value="robot_1"/>

    <param name="use_sim_time" value="true"/>

    <node name="jaus_node_manager" pkg="node_manager_fkie" type="script_runner.py">
        <param name="script" value="$(find jaustoolset)/JTSNodeManager $(find jaustoolset)/cfg/nm.cfg" />
        <!-- <param name="stop_script" value="pkg://iop_builder_fkie///jaus_node_manager.sh stop" /> -->
    </node>

    <!-- stage_simulator -->
    <node name="ros_stage_roemer" pkg="stage_ros" type="stageros" args="$(find iop_cfg_sim_stage_fkie)/launch/stagemulti/maze.world">
        <param name="capability_group" value="0simulation" />
    </node>

    <node required="true" name="tf_world_roemer_map" pkg="tf" type="static_transform_publisher" args="365796 5624047 0 0 0 0 /world origin 100">
        <param name="capability_group" value="0simulation"/>
    </node>

    <node required="true" name="tf_origin_robot_0" pkg="tf" type="static_transform_publisher" args="1 1 0 0.7854 0 0 origin robot_0/map 100">
        <param name="capability_group" value="0simulation"/>
    </node>

    <node required="true" name="tf_origin_robot_1" pkg="tf" type="static_transform_publisher" args="0 0 0 0.7854 0 0 origin robot_1/map 100">
        <param name="capability_group" value="0simulation"/>
    </node>

    <include file="$(find iop_cfg_sim_stage_fkie)/launch/inc_iop_robot.launch" ns="$(arg robot_ns1)">
        <arg name="robot_ns" value="$(arg robot_ns1)" />
        <arg name="id_subsystem" value="$(arg id_subsystem1)" />
    </include>

    <include file="$(find iop_cfg_sim_stage_fkie)/launch/inc_iop_robot.launch" ns="$(arg robot_ns2)">
        <arg name="robot_ns" value="$(arg robot_ns2)" />
        <arg name="id_subsystem" value="$(arg id_subsystem2)" />
    </include>

</launch>
